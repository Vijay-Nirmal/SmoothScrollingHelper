<Page x:ConnectionId='1'
    x:Class="SmoothScrollingHelper.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmoothScrollingHelper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
                <TextBlock x:ConnectionId='5' Name="CurrentIntex" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Button x:ConnectionId='6' Name="GoToButton" Content="Go To"                          Margin="10,0,0,0"/>
                <TextBox x:ConnectionId='7' Name="GoToIntex" Width="50"/>
                <Button x:ConnectionId='8' Name="PreButton" Content="Previous"                         Margin="10,0,0,0"/>
                <Button x:ConnectionId='9' Name="NextButton" Content="Next"                         />
            </StackPanel>

            <GridView x:ConnectionId='2' x:Name="MyGridView"                                                     Margin="0,30,0,0"                                              ScrollViewer.HorizontalScrollMode="Enabled" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <GridView.ItemTemplate>
                    <DataTemplate                              >
                        <Grid x:ConnectionId='3' Width="100" Height="100" Background="Red" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Grid Width="80" Height="80" Background="Green" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock x:ConnectionId='4'                                   FontSize="48" FontWeight="ExtraBlack" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
            
        </StackPanel>
    </Grid>
</Page>

